<launch>
	<arg name="use_sim_time" default="false"/>
	<arg name="namespace" default=""/>
	<arg name="initial_pose_x" default="0"/>
	<arg name="initial_pose_y" default="0"/>
	<arg name="initial_pose_a" default="0"/>
    <arg name="scan_topic" default="/scan"/>
  	<arg name="need_smoother" default="false"/>

    <param name="/use_sim_time" value="$(arg use_sim_time)"/>

	<include file="$(find nav_launch)/launch/common/laser_split.launch"/>

	<node pkg="move_base" type="move_base" respawn="false" name="move_base_node" output="screen">
    		<param name="shutdown_costmaps" value="false" />
    		<param name="controller_frequency" value="10" />
    		<param name="planner_patience" value="3.0" />
    		<param name="controller_patience" value="3.0" />
    		<param name="max_planning_retries" value="2.0" />
    		<param name="conservative_reset_dist" value="3.0" />
    		<param name="planner_frequency" value="5.0" />
    		<param name="oscillation_timeout" value="5.0" />
    		<param name="oscillation_distance" value="0.22" />
            <param name="recovery_behavior_enabled" value="true" />

            <param name="robot_frame_id" value="base_link_fusion" />
            <param name="lookahead_distance" value="0.5" />
            <param name="max_rotational_velocity" value="2.0" />

    		<param name="base_global_planner" value="global_planner/GlobalPlanner" />
            <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />

    		<rosparam file="$(find nav_launch)/cfg/real/dwa/costmap_common_params.yaml" command="load" ns="global_costmap" />
    		<rosparam file="$(find nav_launch)/cfg/real/dwa/costmap_common_params.yaml" command="load" ns="local_costmap" />
    		<rosparam file="$(find nav_launch)/cfg/real/dwa/local_costmap_params.yaml" command="load" />
    		<rosparam file="$(find nav_launch)/cfg/real/dwa/global_costmap_params.yaml" command="load" />
			<rosparam file="$(find nav_launch)/cfg/real/dwa/recovery.yaml" command="load" />
			<!-- 禁止层 -->
			<!-- <rosparam file="$(find nav_launch)/cfg/real/dwa/prohibition_areas.yaml" command="load" ns="global_costmap/costmap_prohibition_layer" /> 
			<rosparam file="$(find nav_launch)/cfg/real/dwa/prohibition_areas.yaml" command="load" ns="local_costmap/costmap_prohibition_layer" />  -->

		    <rosparam file="$(find nav_launch)/cfg/real/dwa/base_global_planner_params.yaml" command="load" />
    		<rosparam file="$(find nav_launch)/cfg/real/dwa/dwa_local_planner_params.yaml" command="load" />
<!-- 	 	<remap from="map" to="/local_virtual_wall"/> -->
<!-- 		<remap from="static_map" to="/local_virtual_wall"/> -->

		<remap from="/cmd_vel" to="/nav/cmd_vel" if="$(arg need_smoother)"/>
 	</node>

	<include file="$(find nav_launch)/launch/common/yocs_smoother_velocity.launch" if="$(arg need_smoother)"/>

	<!-- <include file="$(find mr_nav)/launch/amcl.launch">
	 	<arg name="tf_prefix" value="$(arg namespace)" />
		<arg name="scan_topic" value="$(arg scan_topic)" />
		<arg name="use_map_topic" value="true" />
		<arg name="initial_pose_x" value="$(arg initial_pose_x)" />
		<arg name="initial_pose_y" value="$(arg initial_pose_y)" />
		<arg name="initial_pose_a" value="$(arg initial_pose_a)" />
		<arg name="odom_model_type" value="diff"/>
		<arg name="global_frame_id" value="/map"/>
	</include> -->
</launch>
